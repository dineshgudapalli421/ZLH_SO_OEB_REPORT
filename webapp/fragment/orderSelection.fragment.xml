<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    xmlns:smartMultiInput="sap.ui.comp.smartmultiinput"
    xmlns:smartForm="sap.ui.comp.smartform"
>
    <f:SimpleForm
        editable="true"
        layout="ResponsiveGridLayout"
        labelSpanXL="3"
        labelSpanL="3"
        labelSpanM="3"
        labelSpanS="12"
        adjustLabelSpan="false"
        emptySpanXL="4"
        emptySpanL="4"
        emptySpanM="4"
        emptySpanS="0"
        columnsXL="1"
        columnsL="1"
        columnsM="1"
        title="Order Selection"
        singleContainerFullSize="false"
    >
        <f:content>
            <Label text="Order No" />
            <MultiInput
                id="idServiceOrder"
                width="60%"
                showValueHelp="true"
                tokenUpdate="onOrderNoTokenUpdate"
                submit="onSubmitOrderNumber"
                valueHelpRequest=".onValueHelpRequested"
                suggestionItemSelected=".onOrderSuggestionItemPress"
                suggestionRows="{
				path: '/Service_OrderSet'
			}"
            >
                <suggestionColumns>
                    <Column>
                        <Label text="Order ID" />
                    </Column>
                    <Column>
                        <Label text="Order Type" />
                    </Column>
                    <Column>
                        <Label text="Description" />
                    </Column>
                </suggestionColumns>
                <suggestionRows>
                    <ColumnListItem>
                        <Label text="{OrderId}" />
                        <Label text="{OrderType}" />
                        <Label text="{Description}" />
                    </ColumnListItem>
                </suggestionRows>
            </MultiInput>
            <Label text="Order Type" />
            <MultiInput
                id="idOrderType"
                showValueHelp="false"
                width="60%"
                value="{oSelectionModel>/0/aSelOrderType}"
                editable="false"
            />
            <Label text="Mainwork Center" />
            <MultiInput
                id="idMainWorkCenter"
                width="60%"
                showValueHelp="false"
                valueHelpRequest=".onValueHelpRequested"
                suggestionItemSelected=".onMainWCSuggestionItemPress"
                suggestionRows="{
				path: '/Main_Work_CenterSet'
			}"
            >
                <suggestionColumns>
                    <Column>
                        <Label text="Main Work Center" />
                    </Column>
                    <Column>
                        <Label text="Description" />
                    </Column>
                </suggestionColumns>
                <suggestionRows>
                    <ColumnListItem>
                        <Label text="{MainWorkCenter}" />
                        <Label text="{Description}" />
                    </ColumnListItem>
                </suggestionRows>
            </MultiInput>
            <!-- <Label text="Period" />
            <MultiInput
                width="70%"
                selectedKey=""
                showClearIcon="true"
                showValueHelp="true"
            /> -->
        </f:content>
    </f:SimpleForm>
</core:FragmentDefinition>

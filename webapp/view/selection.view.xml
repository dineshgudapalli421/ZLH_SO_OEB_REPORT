<mvc:View
    controllerName="com.sap.lh.cs.zlhoebreport.controller.selection"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    xmlns:smartField="sap.ui.comp.smartfield"
    xmlns:smartMultiInput="sap.ui.comp.smartmultiinput"
    xmlns:smartForm="sap.ui.comp.smartform"
    xmlns:core="sap.ui.core"
>
    <Page
        id="page"
        busy="{oSelectionModel>/bPageBusy}"
        busyIndicatorDelay="1"
        showHeader="false"
    >
        <content>
            <core:Fragment
                fragmentName="com.sap.lh.cs.zlhoebreport.fragment.orderStatus"
                type="XML"
            />
            <core:Fragment
                fragmentName="com.sap.lh.cs.zlhoebreport.fragment.orderSelection"
                type="XML"
            />
            <core:Fragment
                fragmentName="com.sap.lh.cs.zlhoebreport.fragment.operationSelection"
                type="XML"
            />
            <core:Fragment
                fragmentName="com.sap.lh.cs.zlhoebreport.fragment.operationStatus"
                type="XML"
            />
        </content>
        <footer>
            <Toolbar>
                <ToolbarSpacer />
                <Button
                    class="sapUiTinyMargin"
                    type="Emphasized"
                    text="Execute"
                    press="onPressNext"
                />
            </Toolbar>
        </footer>
    </Page>
</mvc:View>
